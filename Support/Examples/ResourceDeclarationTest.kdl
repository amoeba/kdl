@type Color : "colr" {
	template {
		PSTR name;
		HLNG rgb;
	};

	field("name") {
		name;
	};

	field("rgb") {
		rgb = 0x000000;
	};
};

@type Fruit : "fr√ºt" {
	template {
		DWRD color;
		PSTR name;
	};

	field("color"){
		color as Color&;
	};

	field("name") {
		name;
	};
};

declare Color {
	new (#128) {
		name = "Red";
		rgb = 0xFF0000;
	};

	new (#129) {
		name = "Green";
		rgb = 0x00FF00;
	};

	new (#130) {
		name = "Orange";
		rgb = 0xFF8800;
	};
};

declare Fruit {
	new (#128, "Apple") {
		name = "Apple";
		color = #128;
	};
};